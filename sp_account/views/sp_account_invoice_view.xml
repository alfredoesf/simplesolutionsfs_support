<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form -->
        <record id="sp_account_invoice_inherit_form" model="ir.ui.view">
            <field name="name">account.invoice.inherit.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="after">
                    <field name="department_id"/>
                </field>
            </field>
        </record>

        <record id="sp_invoice_supplier_form_inherit_form" model="ir.ui.view">
            <field name="name">invoice.supplier.inherit.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="vendor_bill_id" position="after">
                    <field name="department_id"/>
                </field>
            </field>
        </record>

        <record id="sp_view_account_invoice_inherit_filter" model="ir.ui.view">
            <field name="name">account.invoice.inherit.search</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="department_id"/>
                </xpath>
                <xpath expr="//search/group/filter[@name='status']" position="after">
                    <filter string="Department" name="by_department_id" context="{'group_by':'department_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
