<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- tree -->
        <record id="sp_view_move_inherit_tree" model="ir.ui.view">
            <field name="name">sp.account.move.inherit.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="department_id"/>
                </field>
            </field>
        </record>

        <!-- Form -->
        <record id="sp_view_move_inherit_form" model="ir.ui.view">
            <field name="name">sp.account.move.inherit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="department_id"/>
                </field>
            </field>
        </record>

        <record id="sp_view_account_move_inherit_filter" model="ir.ui.view">
            <field name="name">sp.account.move.select.inherit.search</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="department_id"/>
                </xpath>
                <xpath expr="//search/group/filter[@name='date']" position="after">
                    <filter string="Department" name="by_department_id" context="{'group_by':'department_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
