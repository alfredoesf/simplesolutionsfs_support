<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- tree -->
        <record id="sp_view_pos_order_tree_inherit" model="ir.ui.view">
            <field name="name">sp.pos.order.inherit.tree</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
            <field name="arch" type="xml">
                <field name="session_id" position="after">
                    <field name="department_id"/>
                </field>
            </field>
        </record>

        <!-- Form -->
        <record id="sp_view_pos_pos_inherit_form" model="ir.ui.view">
            <field name="name">sp.pos.order.inherit.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="fiscal_position_id" position="after">
                    <field name="department_id"/>
                </field>
            </field>
        </record>

        <record id="sp_view_pos_order_filter_inherit" model="ir.ui.view">
            <field name="name">sp.pos.order.list.select.inherit</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <field name="department_id"/>
                </xpath>
                <xpath expr="//search/group/filter[@name='order_month']" position="after">
                    <filter string="Department" name="by_department_id" context="{'group_by':'department_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
