<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form -->
        <record id="account_invoice_inherit_form" model="ir.ui.view">
            <field name="name">account.invoice.inherit.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="after">
                    <field name="department_id"/>
                </field>
            </field>
        </record>

        <record id="invoice_supplier_form_inherit_form" model="ir.ui.view">
            <field name="name">invoice.supplier.inherit.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <field name="vendor_bill_id" position="after">
                    <field name="department_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
